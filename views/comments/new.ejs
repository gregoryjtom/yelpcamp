<%- include("../partials/header") %>

<div class="container">
	<div class="row">
		<h1 class="col-12" style="text-align: center; margin: 25px auto">Add New Comment to <%= campground.name %></h1>
		<div style="width: 30%; margin: 0 auto;">
			<form action="/campgrounds/<%= campground._id %>/comments" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="comment[text]" placeholder="text">
				</div>
				<div class="form-group">
					<input class="btn btn-lg btn-primary btn-block" type="submit">
				</div>
			</form>
			<a href="/campgrounds/<%= campground._id %>">Go Back</a>
		</div>
	</div>	
</div>

<%- include("../partials/footer") %>